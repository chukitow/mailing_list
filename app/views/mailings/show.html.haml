.container
  .row
    .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
      .mailing-container
        %h2.text-center
          Thanks! #{@mailing.name}
        .row
          .col-md-4
            - unless @mailing.linkedin_pictureUrl.nil?
              = image_tag(@mailing.linkedin_pictureUrl, class: 'img-responsive center-block')

            .text-center
              %a{href: @linkedin_authorize_url}
                Connect to LinkedIn
